<h2>{{clients.name}}</h2>

<table class="header-on-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="/client/{{clients.id}}">{{clients.mail}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Imię
            </th>
            <td>
                {{clients.name}}
            </td>
        </tr>
        <tr>
            <th>
                Data następnego kontaktu:
            </th>
            <td>
                {{clients.nextContactAt}}
            </td>
        </tr>
        {{#if clients.notes}}
        <tr>
            <th>
                Notatki:
            </th>
            <td>
                {{clients.notes}}
            </td>
        </tr>
        {{/if}}
    </tbody>
</table>
<div>
<form method="GET" action="/client/form/edit/{{clients.id}}">
    <button type="submit">Edytuj dane</button>
</form>
</div>
<div>
{{> go-to-clients}}
</div>